# frontend/Dockerfile
FROM node:18-alpine

WORKDIR /app

# Install xsel for clipboard functionality
RUN apk add --no-cache xsel

# Copy package files first
COPY package*.json ./
RUN npm install

# Copy the rest of the application
COPY . .

# Build the application
RUN npm run build

# Install serve for production serving
RUN npm install -g serve

EXPOSE 3000

CMD ["serve", "-s", "build"]