# frontend/Dockerfile
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the application
COPY . .

# Build the app
RUN npm run build

# Install serve to host the built app
RUN npm install -g serve

EXPOSE 3000

# Serve the app
CMD ["serve", "-s", "build"]